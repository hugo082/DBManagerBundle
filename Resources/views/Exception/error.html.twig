{% extends '::base.html.twig' %}

{% block body %}

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="alert alert-{{ type }}">
                        <strong>{{ type }}</strong> {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="card">
        <h3 class="card-header">An error has occurred : {{ exception.statusCode }}</h3>
        <div class="card-block">
            <h5>{{ exception.title }}</h5>
            <p>{{ exception.message }}</p>
            {% if exception.statusCode == 329 %}
                <p><a class="btn btn-default" href="{{path('book.enabled', {'id': exception.headers.id})}}">Confirm</a></p>
            {% endif %}
            <p><a href="{{path('homepage')}}">Back</a></p>
        </div>
    </div>

{% endblock %}
