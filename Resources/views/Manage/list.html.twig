{% trans_default_domain 'DBManagerBundle' %}

<h3>{{ 'entity.listing'|trans }} :</h3>
{% if all is not empty %}
    <table>
        <tr>
            {% for name in all.0.obj.properties %}
                <th>{{ name }}</th>
            {% endfor %}
        </tr>
        {% for e in all %}
            <tr>
                {% for item in e.obj.vars %}
                    <td>{{ item }}</td>
                {% endfor %}

                {% for methodId, method in eInfo.methods %}
                    {% if method.environment == constant('FQT\\DBCoreManagerBundle\\DependencyInjection\\Configuration::ENV_OBJECT') %}
                        <td><a href="{{ path('db.manager.process', {'method':methodId,'name':name,'id':e.obj.id})}}">{{ method.fullName }}</a></td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% else %}
    <div>{{ 'entity.empty'|trans }}</div>
{% endif %}