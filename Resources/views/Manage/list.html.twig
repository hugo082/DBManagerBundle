{% trans_default_domain 'DBManagerBundle' %}

<h3>{{ 'entity.listing'|trans }} :</h3>
{% if all is not empty %}
    <table>
        <tr>
            {% for name in all.0.properties %}
                <th>{{ name }}</th>
            {% endfor %}
        </tr>
        {% for e in all %}
            <tr>
                {% for item in e.vars %}
                    <td>{{ item }}</td>
                {% endfor %}

                {% if eInfo.permission.edit %}
                    <td><a href="{{ path('db.manager.edit', {'name':name,'id':e.id})}}">{{ 'entity.action.edit'|trans }}</a></td>
                {% endif %}
                {% if eInfo.permission.remove %}
                    <td><a href="{{ path('db.manager.remove', {'name':name,'id':e.id})}}">{{ 'entity.action.remove'|trans }}</a></td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% else %}
    <div>{{ 'entity.empty'|trans }}</div>
{% endif %}